@model LavenderMotors.Entities.Transaction

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Car)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Car.Brand)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manager.Name)
        </dd>
    </dl>
</div>
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lines[0].ServiceTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lines[0].Engineer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lines[0].Hours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lines[0].PricePerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lines[0].Price)
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Lines.Count; i++)
        {
            <tr>
                <th>
                    @Html.DisplayFor(model => model.Lines[i].ServiceTask)
                </th>
                <th>
                    @Html.DisplayFor(model => model.Lines[i].Engineer)
                </th>
                <th>
                    @Html.DisplayFor(model => model.Lines[i].Hours)
                </th>
                <th>
                    @Html.DisplayFor(model => model.Lines[i].PricePerHour)
                </th>
                <th>
                    @Html.DisplayFor(model => model.Lines[i].Price)
                </th>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
